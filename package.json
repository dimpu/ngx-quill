{
  "name": "ngx-quill",
  "version": "7.0.0",
  "author": {
    "name": "Dimpu Aravind Budddha"
  },
  "description": "An angular (>= v2) component for the easy use of the QuillJS richt text editor.",
  "bugs": "https://github.com/dimpu/ngx-quill/issues",
  "homepage": "https://github.com/dimpu/ngx-quill",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimpu/ngx-quill"
  },
  "engines": {
    "node": ">= 10"
  },
  "keywords": [
    "editor",
    "rich text",
    "wysiwyg",
    "angular",
    "directive",
    "component",
    "quill",
    "quilljs",
    "angular 2",
    "angular",
    "text editor"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "lib.build": "ng build @dimpu/ngx-quill",
    "lib.build.watch": "ng build @dimpu/ngx-quill --watch",
    "lib.test": "ng test @dimpu/ngx-quill",
    "lib.lint": "ng lint @dimpu/ngx-quill",
    "demo.serve": "ng serve ngx-quill-demo",
    "demo.build": "ng build ngx-quill-demo",
    "demo.test": "ng test ngx-quill-demo",
    "demo.lint": "ng lint ngx-quill-demo",
    "demo.deploy":"npm run demo.build -- --base-href='/ngx-quill/' && gh-pages -d dist/ngx-quill-demo/",
    "npm.publish": "cd projects/dimpu/ngx-quill && npm version patch && cd ../../../ && npm run lib.build && cp ./README.md dist/dimpu/ngx-quill && cd dist/dimpu/ngx-quill  && npm config set scope dimpu && npm publish --access=public"
  },
  "private": true,
